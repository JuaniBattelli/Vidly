@model List<Movie>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table class="table table.bordered table-hover">
    <thead>
    <th>Movies</th>
    <th>Genre</th>
    </thead>
    <tbody>
        @foreach (var movie in @Model)
        {
            <tr>

                <td>@Html.ActionLink(movie.Name, "Details", "Movies", new { id = movie.Id })</td>
                <td> @movie.Genre</td>

            </tr>
        }
    </tbody>
</table>

